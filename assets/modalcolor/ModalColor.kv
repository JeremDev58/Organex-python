#:kivy 2.0.0

<ModalColor>:
    size_hint: None, None
    size: 0.8*Window.width, 0.6*Window.height
    border: [0]
    canvas.before:
        Color:
            rgba: hex(app.color_el[0])
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: view_modal
        title_modal: title_modal
        content_modal: content_modal
        size_hint: 1,1 
        orientation: "vertical"
        Label:
            id: title_modal
            size_hint: 1 , .3
            text: "DÃ©finir la couleur"
            font_size: app.kw_font_size['h1']
            color: hex(app.color_font[0])
            canvas.before:
                Color:
                    rgba: hex(app.color_primary)
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            id: content_modal
            size_hint: 1, .7
            orientation:"vertical"
            BtnColor:
                text: "Rouge"
                color: "#DA493D"
                on_press: root.dismiss(color_choose=self.color, color_title=self.text)
